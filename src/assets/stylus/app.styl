@import 'ui/*'
@import '_variables.styl'
@import '_animations.styl'
html
  width 100%
  height 100%
  font-size 62.5%
  body
    font-family 'OpenSans', sans-serif
    font-weight 400
    font-size 1.4rem
    color main-color
    background-color base-background
    line-height 1.4
    overflow-x hidden
    margin 0
    padding 0
    section
      position relative
      display inline-block
      vertical-align top
      width 100%
      padding 7rem 0
    h1, h2, h3, h4, h5, h6
      margin 0
      font-family: 'OpenSans',sans-serif
    .title
      text-align: center
      font-size: 2.4rem
      text-transform: uppercase
      font-weight: 600
      letter-spacing .5rem
      &--light
        color white
    .description
      display: inline-block
      text-transform: uppercase
      font-size: 1.1rem
      text-align center
      font-family: "OpenSans", sans-serif
      position: relative
      letter-spacing: .3rem
      font-weight: 400
      color purple
      margin-bottom: 4rem
      margin-top 3rem
      width 100%
      &--light
        color: #fd307c